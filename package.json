{
  "name": "hoaxify-tdd",
  "version": "1.0.0",
  "description": "A restful web service built with a TDD approach",
  "main": "index.js",
  "repository": "https://github.com/NoerGitKat/hoaxify-tdd.git",
  "author": "Noer Paanakker <noer@lightworksweb.nl>",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && node dist/server.js",
    "dev": "nodemon ./src/server.ts",
    "build": "rimraf ./dist && tsc",
    "format": "prettier --write ./src",
    "lint": "eslint ./src/ --ext .ts --fix",
    "prepare": "husky install",
    "test": "jest --watch --verbose"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn format"
    ]
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/eslint": "^8.4.10",
    "@types/express": "^4.17.16",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@types/nodemailer": "^6.4.7",
    "@types/prettier": "^2.7.2",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.11",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "lint-staged": "^13.1.0",
    "nodemailer-stub": "^1.2.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.3",
    "i18next": "^22.4.9",
    "i18next-fs-backend": "^2.1.1",
    "i18next-http-middleware": "^3.2.2",
    "nodemailer": "^6.9.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.28.0",
    "sequelize-typescript": "^2.1.5",
    "sqlite3": "^5.1.4"
  }
}
